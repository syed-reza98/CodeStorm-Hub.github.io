<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="healthGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <rect width="400" height="300" fill="url(#healthGrad)"/>
  
  <!-- Medical cross -->
  <g transform="translate(180, 80)" fill="rgba(255,255,255,0.9)">
    <rect x="15" y="0" width="10" height="40" rx="2"/>
    <rect x="0" y="15" width="40" height="10" rx="2"/>
  </g>
  
  <!-- Health dashboard -->
  <g transform="translate(80, 140)">
    <rect x="0" y="0" width="240" height="100" rx="8" fill="rgba(255,255,255,0.2)"/>
    
    <!-- Health metrics -->
    <circle cx="40" cy="30" r="20" fill="none" stroke="rgba(255,255,255,0.6)" stroke-width="3"/>
    <circle cx="40" cy="30" r="20" fill="none" stroke="white" stroke-width="3" 
            stroke-dasharray="75.4" stroke-dashoffset="18.85" transform="rotate(-90 40 30)"/>
    
    <circle cx="120" cy="30" r="20" fill="none" stroke="rgba(255,255,255,0.6)" stroke-width="3"/>
    <circle cx="120" cy="30" r="20" fill="none" stroke="white" stroke-width="3" 
            stroke-dasharray="75.4" stroke-dashoffset="30.16" transform="rotate(-90 120 30)"/>
    
    <circle cx="200" cy="30" r="20" fill="none" stroke="rgba(255,255,255,0.6)" stroke-width="3"/>
    <circle cx="200" cy="30" r="20" fill="none" stroke="white" stroke-width="3" 
            stroke-dasharray="75.4" stroke-dashoffset="45.24" transform="rotate(-90 200 30)"/>
    
    <!-- Labels -->
    <text x="40" y="70" text-anchor="middle" fill="white" font-family="Arial" font-size="10">Heart Rate</text>
    <text x="120" y="70" text-anchor="middle" fill="white" font-family="Arial" font-size="10">Steps</text>
    <text x="200" y="70" text-anchor="middle" fill="white" font-family="Arial" font-size="10">Sleep</text>
  </g>
  
  <!-- Text overlay -->
  <text x="200" y="280" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">Healthcare Platform</text>
</svg>